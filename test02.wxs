    <Product Id="367dd060-090a-438c-87c0-67b4e39da6cf" Codepage="1252" Language="1033" Manufacturer="test" Name="test02" UpgradeCode="b98e9f37-70a1-4167-91d3-6ee02f1001dd" Version="1.0.0.1">
