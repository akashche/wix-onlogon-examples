        <CustomAction Id="action_2_prep" Property="WixQuietExec64CmdLine" Value="&quot;[SystemFolder]schtasks.exe&quot; /create /tn test /sc daily /st 12:10 /ru [LogonUser] /tr &quot;\&quot;[SystemFolder]cmd.exe\&quot; /c hello&quot;"/>
